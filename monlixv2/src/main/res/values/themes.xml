<resources>

    <style name="MonlixTabButtonStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/barlow_medium</item>
    </style>

    <style name="MonlinxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
    </style>

    <style name="MonlinxTranscationCard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/points_item</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">96dp</item>
    </style>
</resources>
