<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:minHeight="100dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            <ImageView
                    android:id="@+id/adImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="transaction image" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:background="@drawable/monlix_ad_status_bg"
                    android:textSize="10sp"
                    android:textColor="@color/redV2"
                    android:fontFamily="@font/barlow_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="COMPLETE A TASK" />

            <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/barlow_semibold"
                    android:textColor="@color/darkBlue"
                    android:layout_width="wrap_content"
                    android:id="@+id/adTitle"
                    android:text="title"
                    android:layout_height="wrap_content" />

            <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/grayV5"
                    android:textSize="12sp"
                    android:fontFamily="@font/barlow"
                    android:layout_width="wrap_content"
                    android:id="@+id/adDescription"
                    android:text="subtitle"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:padding="4dp"
            android:background="@color/greenV4"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        <LinearLayout
                android:background="@drawable/monlix_offer_points_item"
                android:layout_width="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <TextView
                    android:textColor="@color/white"
                    android:text="+1 530 000"
                    android:textSize="12sp"
                    android:id="@+id/adPoints"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/barlow_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:textColor="@color/white"
                    android:text="USD"
                    android:textSize="12sp"
                    android:id="@+id/adCurrency"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/barlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/darkBlue"
                android:text="Watch Ad"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
