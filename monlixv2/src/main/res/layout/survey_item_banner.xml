<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="wrap_content">

    <FrameLayout
            android:background="@drawable/dark_blue_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <LinearLayout
                android:background="@drawable/border_radius_item"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="top|start"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/timer2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            <TextView
                    android:id="@+id/surveyTime"
                    android:textColor="@color/darkBlue"
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="12sp"
                    android:text="5 min"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <TextView
                    android:textSize="12sp"
                    android:fontFamily="@font/barlow_bold"
                    android:text="HOT"
                    android:background="@drawable/hot_radius_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:background="@drawable/border_radius_item_transparent_20"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="top|end"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/orange_star"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            <TextView
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="4.5(13)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/surveyPoints"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textSize="60sp"
                    android:text="900"
                    android:fontFamily="@font/barlow_extrabold"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/surveyCurrency"
                    android:fontFamily="@font/barlow_semibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:text="POINTS"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="star'" />

    </FrameLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:minHeight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/surveyTitle"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:fontFamily="@font/barlow_semibold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textAlignment="center"
                tools:text="Lorem ipsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
