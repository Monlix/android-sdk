<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/stepCheck"
            android:src="@drawable/monlix_circle_radio"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        <TextView
                android:fontFamily="@font/barlow_medium"
                android:layout_marginLeft="12dp"
                android:textColor="@color/darkBrown"
                android:id="@+id/requirementTitle"
                android:text="Install Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:fontFamily="@font/barlow_extrabold"
                android:layout_marginLeft="12dp"
                android:textColor="@color/grayV5"
                android:id="@+id/goalPayout"
                tools:text="53 000C"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/bottomDots"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="8dp"
        android:src="@drawable/monlix_dotted_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>
