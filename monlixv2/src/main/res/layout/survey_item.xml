<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:background="@drawable/dark_blue_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp">






        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/surveyPoints"
                    android:fontFamily="@font/barlow_extrabold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="30sp"
                    app:autoSizeStepGranularity="2sp"
                    android:lines="1"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:text="900"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/surveyCurrency"
                    android:fontFamily="@font/barlow_semibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:text="POINTS"
                    android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_gravity="top|center"
            android:background="@drawable/border_radius_item"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginRight="4dp"
                android:src="@drawable/timer2"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        <TextView
                android:id="@+id/surveyTime"
                android:textSize="12sp"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/barlow_medium"
                android:text="5 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/surveyTitle"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:fontFamily="@font/barlow_semibold"
                android:textAlignment="center"
                tools:text="Lorem"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
