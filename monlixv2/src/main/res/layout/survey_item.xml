<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="wrap_content">

    <FrameLayout
            android:background="@drawable/dark_blue_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp">






        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/surveyPoints"
                    android:fontFamily="@font/barlow_extrabold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:text="900"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/surveyCurrency"
                    android:fontFamily="@font/barlow_semibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:text="POINTS"
                    android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="@drawable/border_radius_item_half_corners"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_marginRight="4dp"
                    android:src="@drawable/timer2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            <TextView
                    android:id="@+id/surveyTime"
                    android:textSize="12sp"
                    android:textColor="@color/darkBlue"
                    android:fontFamily="@font/barlow_medium"
                    android:text="5 min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
                android:background="@drawable/border_radius_item_transparent_20_half_corners"
                android:layout_gravity="top|end"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/orange_star"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            <TextView
                    android:id="@+id/surveyRating"
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="5 min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:minHeight="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/surveyTitle"
                android:textColor="@color/darkBlue"
                android:textSize="16sp"
                android:gravity="center"
                android:textAlignment="center"
                tools:text="Lorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
