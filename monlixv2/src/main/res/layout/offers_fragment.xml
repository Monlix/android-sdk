<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="56dp">

            <androidx.appcompat.widget.AppCompatEditText
                    android:fontFamily="@font/barlow_medium"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:textSize="12sp"
                    android:gravity="center|start"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/search2"
                    android:hint="@string/search_offer_or_keyword"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <FrameLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="32dp">

            <TextView
                    android:onClick="offerFilterClick"
                    android:layout_marginLeft="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/darkBlue"
                    android:fontFamily="@font/barlow_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:onClick="offerFilterClick"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="start|center_horizontal"
                    android:src="@drawable/filter_slider_v2"
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatSpinner
                    android:background="@drawable/spinner_icon"
                    android:id="@+id/offerTypeSpinner"
                    android:layout_gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
        </FrameLayout>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offersRecycler"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/offer_item" />
    </LinearLayout>
</layout>


