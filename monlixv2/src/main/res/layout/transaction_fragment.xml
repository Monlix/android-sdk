<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical">

    <ProgressBar
        android:visibility="visible"
        android:id="@+id/loader"
        android:layout_gravity="top|center"
        android:layout_marginTop="64dp"
        android:layout_width="32dp"
        android:layout_height="32dp"/>


        <LinearLayout
            android:visibility="invisible"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/ptcContainer"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/MonlinxTranscationCard"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:text="@string/ptc_clicks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:id="@+id/ptcClicks"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/MonlinxTranscationCard"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:text="@string/ptc_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:id="@+id/ptcEarnings"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/offer_result_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/transaction_item" />

</LinearLayout>
