<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offer_item"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/offer_icon"
        tools:src="@android:drawable/spinner_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="SSI  SURVEYS SSI  SURVEYSSSI  SURVEYSSSI  SURVEYS"
            android:lineSpacingMultiplier="0.7"
            android:textColor="@color/darkBlack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textColor="@color/grayLight"
            android:lineSpacingMultiplier="0.7"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-120dp"
        android:layout_marginLeft="-120dp"
        android:gravity="end">

        <LinearLayout
            android:gravity="center"
            android:minWidth="84dp"
            android:minHeight="32dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            android:background="@drawable/offer_item_payout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/payout"
                android:paddingTop="2dp"
                android:textSize="14sp"
                android:text="5"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/currency"
                android:paddingBottom="2dp"
                android:layout_marginTop="-4dp"
                android:textSize="12sp"
                android:text="USD"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
