<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="4dp"
        android:minHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                <ImageView
                        tools:src="@drawable/offer_placeholder"
                        android:scaleType="centerInside"
                        android:id="@+id/transactionImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="transaction image" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                    android:minHeight="80dp"
                    android:gravity="top"
                    android:paddingStart="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_gravity="top"
                        android:paddingRight="10dp"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:background="@drawable/transaction_item_points"
                            android:fontFamily="@font/barlow_bold"
                            android:textSize="10sp"
                            android:textColor="@color/grayV5"
                            tools:text="+153000"
                            android:id="@+id/payout"
                            android:layout_marginRight="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:background="@drawable/transaction_status_completed"
                            android:fontFamily="@font/barlow_bold"
                            android:textAllCaps="true"
                            android:textColor="@color/green"
                            android:textSize="10sp"
                            tools:text="Completed"
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                        android:paddingRight="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/darkBlue"
                        android:text=""
                        android:id="@+id/title"
                        tools:text="Call of Antia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_bold"
                        android:ellipsize="end"
                        android:maxLines="2"
                        />

                <TextView
                        android:paddingRight="4dp"
                        android:id="@+id/transactionId"
                        tools:text="8EVwSMu9TM1uzJiuQ8bnFB"
                        android:textColor="@color/grayV5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

